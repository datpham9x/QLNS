            <!-- JavaScript để xử lý sự kiện và tạo lịch công -->
            <script>
                $(document).ready(function () {
                    // Khởi tạo Bootstrap Datepicker chỉ cho phép chọn tháng và năm
                    $('#datepicker').datepicker({
                        format: 'mm-yyyy',
                        startView: 'months',
                        minViewMode: 'months',
                        autoclose: true
                    });
            
                    // Xử lý sự kiện khi người dùng nhấn nút "Chọn"
                    $('#selectMonthYear').click(function () {
                        // Lấy giá trị tháng và năm từ datepicker
                        const selectedDate = $('#datepicker').val();
                        const [month, year] = selectedDate.split('-');
                        
                        // Lấy giá trị mã nhân viên
                        const manhanvien = $('#manhanvien').val();
            
                        // Tạo URL với thông tin tháng, năm và mã nhân viên
                        const url = `/cacl-workday?month=${month}&year=${year}&manhanvien=${manhanvien}`;
            
                        // Chuyển hướng đến URL đã tạo
                        window.location.href = url;
                    });
                });
            </script>
            
       

